# Set default behavior to automatically normalize line endings
* text=auto

# Files that should be treated as text and normalized
*.js text eol=lf
*.ts text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.txt text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf

# Files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pdf binary
*.exe binary
*.dll binary
*.so binary

# Scripts that should have executable permissions in Unix
*.sh text eol=lf
*.bash text eol=lf

# Configuration files
.editorconfig text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf 